    <div class="scroller-wrapper">
        <ul class="scroller-list">
            <?php $feedbackCollection = $block->getFeedbackData(); ?>
            <?php if ($feedbackCollection && $feedbackCollection->getSize() > 0): ?>
                <?php foreach ($feedbackCollection as $index => $feedback): ?>
                    <li class="scroller-item">
                        <p>Name: <?php echo $feedback->getFirstName() . ' ' . $feedback->getLastName(); ?></p>
                        <p>FeedBack: <?php echo $feedback->getComment(); ?></p>
                    </li>
                <?php endforeach; ?>
            <?php else: ?>
                <li class="no-feedback">No validated feedback found.</li>
            <?php endif; ?>
        </ul>
    </div>
</div>
